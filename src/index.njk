        {{content.link_title}}
      </a>
    {%- endfor -%}
  </section>
  <section>
    <h3>{{data.foods.title}}</h3>
    <ul>
    {%- for content in data.foods.contents -%}
      <li>
        <a href="{{content.link_url}}" target="_blank" rel="noopener">
          {{content.link_title}}
        </a>
